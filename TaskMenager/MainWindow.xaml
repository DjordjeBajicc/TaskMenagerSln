<Window x:Class="TaskMenager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskMenager"
        xmlns:converters="clr-namespace:TaskMenager.Utils"
        mc:Ignorable="d"
        Title="TaskMenager" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5,0,5,0">
            <Button Content="Kreiraj zadatak" Margin="5" Click="AddTask_Click"/>
            
        </StackPanel>
       
      
        <TextBox Text="Za uraditi" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBox Text="U toku" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBox Text="Uradjeno" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"/>
        <ListView Name="ToDoList" Background="LightGreen" MouseDoubleClick="ToDoList_MouseDoubleClick" AllowDrop="True" Drop="ToDoList_Drop" BorderThickness="1px" BorderBrush="Black" Grid.Row="3" Grid.Column="0" ItemsSource="{Binding ToDoTasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock MouseMove="TextBlock_MouseMove" Text="{Binding Name}" HorizontalAlignment="Center"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Name="InProgressList" Background="LightGreen" MouseDoubleClick="ToDoList_MouseDoubleClick" AllowDrop="True" Drop="ToDoList_Drop" BorderThickness="1px" BorderBrush="Black" Grid.Row="3" Grid.Column="1" ItemsSource="{Binding InProgressTasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock MouseMove="TextBlock_MouseMove" Text="{Binding Name}" HorizontalAlignment="Center"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Name="FinishedList" Background="LightGreen" MouseDoubleClick="ToDoList_MouseDoubleClick" AllowDrop="True" Drop="ToDoList_Drop" BorderThickness="1px" BorderBrush="Black" Grid.Row="3" Grid.Column="2" ItemsSource="{Binding FinishedTasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock MouseMove="TextBlock_MouseMove" Text="{Binding Name}" HorizontalAlignment="Center"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border CornerRadius="5" Margin="10,10,10,10" Grid.Row="1" Grid.Column="2" Height="50" Background="LightCoral" AllowDrop="True" Drop="Border_Drop" >
            <TextBlock Text="Prevucite ovdje da obrišete" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Border>
    </Grid>
</Window>
